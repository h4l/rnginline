# http://editorconfig.org/
root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true
indent_style = space

[*.py]
indent_size = 4

[docs/Makefile]
indent_style = tab

# Don't corrupt git patch edit files
[.git/**/*.diff]
trim_trailing_whitespace = false
